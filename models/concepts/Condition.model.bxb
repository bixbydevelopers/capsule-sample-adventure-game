structure (Condition) {
  description (A condition for applying an action)

  property (state) {
    type (core.Text)
    min (Optional) max (One)
    visibility (Private)
    description("The current state (of the object) when action is applied.")
  }

  property (object) {
    type (ObjectName)
    min (Optional) max (One)
    visibility (Private)
    description ("The object which it's state is to be checked")
  }
}
